<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tic_tac_toe_dotnet_maui.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Purple" Offset="0.3" />
            <GradientStop Color="Red" Offset="1.1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="80" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="BorderColor" Value="White" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, *, *, *"
          ColumnDefinitions="*, *, *"
          ColumnSpacing="10"
          RowSpacing="10"
          Margin="10">
        
        <Label Grid.Row="0"
               Grid.ColumnSpan="3"
               FontSize="60"
               HorizontalTextAlignment="Center"
               Text="Tic Tac Toe" />

        <Button Grid.Row="1" Grid.Column="0" Clicked="Button_Clicked" x:Name="btn10" />
        <Button Grid.Row="1" Grid.Column="1" Clicked="Button_Clicked" x:Name="btn11" />
        <Button Grid.Row="1" Grid.Column="2" Clicked="Button_Clicked" x:Name="btn12" />

        <Button Grid.Row="2" Grid.Column="0" Clicked="Button_Clicked" x:Name="btn20" />
        <Button Grid.Row="2" Grid.Column="1" Clicked="Button_Clicked" x:Name="btn21" />
        <Button Grid.Row="2" Grid.Column="2" Clicked="Button_Clicked" x:Name="btn22" />

        <Button Grid.Row="3" Grid.Column="0" Clicked="Button_Clicked" x:Name="btn30" />
        <Button Grid.Row="3" Grid.Column="1" Clicked="Button_Clicked" x:Name="btn31" />
        <Button Grid.Row="3" Grid.Column="2" Clicked="Button_Clicked" x:Name="btn32" />
    </Grid>

</ContentPage>
